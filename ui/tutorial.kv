<PlayDeck>
    name: 'play_deck'
    BoxLayout:
        orientation: 'vertical'
        ActionBar:
            background_color: 0,.6,1,1
            id: ac
            #background_image: ''
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    with_previous: True
                    size_hint_x: None
                    width: self.height
                    on_release: root.manager.current = 'solo_menu'
                ActionLabel:
                    id: action_deck_label
                    text_size: self.width  , None
                ActionButton:
                    text: 'Add card'
                    on_release: root.manager.set_deck(action_deck_label.text)
        BoxLayout:
