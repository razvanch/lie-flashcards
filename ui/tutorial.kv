<AddCard>:
    name: 'add_card'
	FloatLayout:
        ActionBar:
            background_color: 0,.6,1,1
            id: ac2
            #background_image: ''
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    with_previous: True
                    size_hint_x: None
                    width: self.height
                    on_release: root.manager.current = 'solo_menu'
                ActionLabel:
                    text: 'Add new card'
                    text_size: self.width  , None 
                ActionButton:
                    text: 'Create card'
                    on_release: print lab1.height, lab1.y
        FloatLayout:
            id: flboss
            size_hint_y: None
            height: root.height - ac2.height
    		ScrollBox:
                id: sv5
                scroll_y: 1
    			FloatLayout:
                    id: flboss
                    size_hint_y: None
                    height: root.height - ac2.height + fl10.height - (root.height - ac2.height - bbig.height )
                    canvas:
                        Color:
                            rgba: 1,1,1,.9
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    BoxLayout:
                        id: bbig
                        size_hint_y: None
                        y: root.height - ac2.height - self.height
                        height: '150dp' 
                        orientation: 'vertical'
                        BoxLayout:
                            id: b1
                            Label:
                                size_hint_x: 0.3
                                text: 'Card type:'
                                #text_size: self.width, None
                                color: 0,0,0,1
                            Button:
                                canvas.before:
                                    Color:
                                        rgba: 0,0,0,1
                                    Rectangle:
                                        pos: self.x , self.y+self.height/4  
                                        size: self.width,1
                                canvas:
                                    Color:
                                        rgba: 0,0,0,1
                                    Triangle:
                                        points: self.x+self.width,self.y+self.height/4, self.x+self.width-12,self.y+self.height/4, self.x+self.width,self.y+ self.height/4+12
                                id: butp
                                text: 'Default'
                                text_size: self.width -self.width/4 , None
                                color: 0,0,0,1
                                background_color: 0,0,0,0
                                #background_normal: ''
                                #background_down: 'atlas://data/images/defaulttheme/button'
                                on_release: root.show_modal1()
                        BoxLayout:
                            Label:
                                size_hint_x: 0.3
                                text: 'Deck:'
                                #text_size: self.width, None
                                color: 0,0,0,1
    			            Button:
                                canvas.before:
                                    Color:
                                        rgba: 0,0,0,1
                                    Rectangle:
                                        pos: self.x , self.y+self.height/4  
                                        size: self.width,1
                                canvas:
                                    Color:
                                        rgba: 0,0,0,1
                                    Triangle:
                                        points: self.x+self.width,self.y+self.height/4, self.x+self.width-12,self.y+self.height/4, self.x+self.width,self.y+ self.height/4+12
                                id: butd
                                text: 'Default'
                                color: 0,0,0,1
                                background_color: 0,0,0,0
                                background_normal: ''
                                text_size: self.width -self.width/4 , None
                                background_down: 'atlas://data/images/defaulttheme/button'
                                on_release: root.show_modal2()
	
                    FloatLayout:
                        id: fl10
                        size_hint_y: None
                        height: (root.height - ac2.height - bbig.height )  + tti1.height + tti2.height - 3 * tti1.line_height
                        canvas:
                            Color:
                                rgba: 1,1,1,1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        on_height: print ( root.height - 282 - ac2.height ) / (flboss.height - ( root.height - 282 - ac2.height ) + ( bbig.height + lab1.height + self.height ))
                        Label:
                            id: lab1
                            size_hint_y: None
                            y: (root.height - ac2.height - bbig.height ) - tti1.line_height * 3/2 #- tti1.line_height
                            height: tti1.line_height * 3/2
                            text: 'Card Front'
                            color: 0,0,0,1
                        TabTextInput:
                            id: tti1
                            size_hint_y: None
                            font_size: '25dp'
                            y: (root.height - ac2.height - bbig.height ) - self.line_height * 3 #- self.line_height
                            height: self.line_height * 3/2
                            on_ok: bbig.y += self.line_height ; lab1.y+= self.line_height ; print bmin.height  , self.test
                            on_test: if self.test is 3: root.do_me_a_favour()
                            on_test1: if self.test1 >=4: fl10.height-= 2 * self.line_height
                            on_ko: bbig.y -= self.line_height; lab1.y -= self.line_height ; root.do_backwards()
                        Label:
                            id: lab2
                            size_hint_y: None
                            y: (root.height - ac2.height - bbig.height ) - tti1.line_height * 3 - tti1.line_height * 3/2 #- tti1.line_height
                            height: tti1.line_height * 3/2
                            text: 'Card Back'
                            color: 0,0,0,1
                        TabTextInput
                            id: tti2
                            size_hint_y: None
                            font_size: '25dp'
                            y: (root.height - ac2.height - bbig.height ) - tti1.line_height * 3 - tti1.line_height * 3/2 - self.line_height * 3/2
                            height: self.line_height * 3/2
                            #on_height: if (root.height - b.height) / self.height in range (0,1): sv5.scroll_y = ((root.height - b.height) / self.height) - 0.03
                            on_ok: bbig.y += self.line_height ; tti1.y += self.line_height ; lab2.y += self.line_height ; lab1.y += self.line_height
                            on_ko: bbig.y -= self.line_height ; tti1.y -= self.line_height ; lab2.y -= self.line_height ; lab1.y -= self.line_height
                    BoxLayout:
                        id: bmin
                        size_hint_y: None
                        height: (root.height - ac2.height - bbig.height ) / 3 
                        y:( 2 * tti1.line_height)
                        orientation: 'vertical'
                        canvas:
                            Color:
                                rgba: 1,1,1,1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                        Label
                            canvas:
                                Color:
                                    rgba: 1,0,0,0.7
                                Rectangle:
                                    size: self.width, 2
                                    pos: self.pos
                            size_hint_y: 0.5
                            text: 'Tags'
                            color: 0,0,0,1
                        Label
                            id: b
                            canvas:
                                Color:
                                    rgba: 1,0,0,0.7
                                Rectangle:
                                    size: self.width, 2
                                    pos: self.pos
                            size_hint_y: 0.5
                            text: 'Filler'
                            color: 0,0,0,1
                        Widget
                            
