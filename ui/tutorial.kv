                size_hint_x: .05
            BoxLayout
                spacing: '20dp'
                orientation: 'vertical'
                Widget:
                BoxLayout
                    orientation: 'vertical'
                    spacing: '5dp'
                    canvas:
                        Color:
                            rgba: 1,1,1,.9
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        id: deck_label
                        color: 0,0,0,1
                        font_size: 20
                    Widget
                Button
                    size_hint_y: .5
                    background_normal: ''
                    background_color: 1,1,1,1
                    color: 0,0,0,1
                    text: 'Study'
                    on_release: root.manager.prepare(deck_label.text)
                Widget
            Widget
                size_hint_x: .05

