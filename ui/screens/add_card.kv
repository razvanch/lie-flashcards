<AddCard>:
    name: 'add_card'
	FloatLayout:
        canvas:
            Color:
                rgba: 1,1,1,.9
            Rectangle
                pos: self.pos
                size: self.size 
        ActionBar:
            background_color: 0,.6,1,1
            id: ac2
            pos_hint: {'top':1}
            ActionView:
                ActionPrevious:
                    with_previous: True
                    size_hint_x: None
                    width: self.height
                    on_release: root.manager.current = 'solo_menu'
                ActionLabel:
                    text: 'Add new card'
                    text_size: self.width  , None
                ActionButton
                    id: ac_create_card
                    text: 'Create card'
                    on_release: root.ac_create_card()
        BoxLayout:
            id: bbig
            size_hint: None , None
            x: root.width / 26
            width: root.width - 2 * self.x
            height: root.height / 4
            y: ac2.y - self.height
            orientation: 'vertical'
            BoxLayout:
                id: b1
                Label:
                    size_hint_x: 0.3
                    text: 'Card type:'
                    #text_size: self.width, None
                    color: 0,0,0,1
                Button:
                    canvas.before:
                        Color:
                            rgba: 0,0,0,1
                        Rectangle:
                            pos: self.x , self.y+self.height/4
                            size: self.width,1
                    canvas:
                        Color:
                            rgba: 0,0,0,1
                        Triangle:
                            points: self.x+self.width,self.y+self.height/4, self.x+self.width-12,self.y+self.height/4, self.x+self.width,self.y+ self.height/4+12
                    id: butp
                    text: 'Default'
                    text_size: self.width -self.width/4 , None
                    color: 0,0,0,1
                    #background_normal: ''
                    background_color: 0,0,0,0
                    on_release: root.show_modal1()
            BoxLayout:
                Label:
                    size_hint_x: 0.3
                    text: 'Deck:'
                    #text_size: self.width, None
                    color: 0,0,0,1
                Button:
                    canvas.before:
                        Color:
                            rgba: 0,0,0,1
                        Rectangle:
                            pos: self.x , self.y+self.height/4
                            size: self.width,1
                    canvas:
                        Color:
                            rgba: 0,0,0,1
                        Triangle:
                            points: self.x+self.width,self.y+self.height/4, self.x+self.width-12,self.y+self.height/4, self.x+self.width,self.y+ self.height/4+12
                    id: butd
                    text: ''
                    color: 0,0,0,1
                    background_color: 0,0,0,0
                    background_normal: ''
                    text_size: self.width -self.width/4 , None
                    background_down: 'atlas://data/images/defaulttheme/button'
                    on_release: root.show_modal2()
        BoxLayout:
            canvas:
                Color:
                    rgba: 1,1,1,.9
                Rectangle
                    pos: self.pos
                    size: self.size 
            size_hint: None , None
            x: bbig.x
            width: bbig.width
            height: root.height - ac2.height - butoane.height - bbig.height - 2 * bbig.x
            y: butoane.height + bbig.x 
            orientation: 'vertical'
            BoxLayout
                canvas:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.x+self.width/20 , self.y
                        size: self.width/1.1, 1
                BoxLayout:
                    orientation: 'vertical'
                    canvas:
                        Color:
                            rgba: 0,0,0,1
                        Rectangle:
                            pos: self.x+self.width-1 , self.y+self.height/4
                            size: 1, self.height/2
                    Label
                        color: 0,0,0,1
                        text: ' Question'
                        text_size: None , self.height/2
                    Label
                        id: lab_q
                        color: 0,0,0,1
                    Widget
                BoxLayout:
                    orientation: 'vertical'
                    Label
                        color: 0,0,0,1
                        text: 'Answer'
                        text_size: None , self.height/2
                    Label
                        id: lab_a
                        color: 0,0,0,1
                    Widget
            Label
                id: tags_label
                size_hint: None, None
                x: bbig.x
                width: bbig.width
                height: root.height / 9
                color: 0,0,0,1
                text: 'Tags :'
                text_size: self.width * 3/4 , None 
        BoxLayout:
            id: butoane
            size_hint: None, None
            x: bbig.x
            width: bbig.width
            #spacing: '10dp'
            height: root.height / 9
            y: root.height / 60
            Button
                canvas:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.x+self.width-1 , self.y+self.height/4
                        size: 1, self.height/2
                text: 'Add Card Question'
                background_color: 1,1,1,.9
                background_normal: ''
                color: 0,0,0,1
                on_release: root.show_modal3()
            Button
                canvas:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        pos: self.x+self.width-1 , self.y+self.height/4
                        size: 1, self.height/2
                background_color: 1,1,1,.9
                background_normal: ''
                color: 0,0,0,1
                text: 'Add Card Answer'
                on_release: root.show_modal4()
            Button
                text: 'Tags'
                background_normal: ''
                color: 0,0,0,1
                background_color: 1,1,1,.9
                on_release: root.show_modal5()
